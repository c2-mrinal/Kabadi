                selItemPri= Copper;  
                break;
                case 'Glass': 
                price= amount* Glass;
                selItemPri= Glass;  
                break;
                case 'Aluminium': 
                price= amount* Aluminium;
                selItemPri= Aluminium;  
                break;
                case 'Battery': 
                price= amount* Battery;
                selItemPri= Battery;  
                break;
                case  'Wood' : 
                price= amount* Wood;
                selItemPri= Wood;  
                break;
                case  'Wire': 
                price= amount* Wire;
                selItemPri= Wire;  
                break;
                case  'Electrical':
